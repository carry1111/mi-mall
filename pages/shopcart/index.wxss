.item{
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx 15rpx;
  background-color: #fff;
}
.radio{
  width: 40rpx;
}
.checked{
  background: url(//s1.mi.com/m/images/m/check_press.png) 50% 50% no-repeat;
  background-size: 40rpx 40rpx;
}
.unchecked{
  background: url(//s1.mi.com/m/images/m/check_normal.png) 50% 50% no-repeat;
  background-size: 40rpx 40rpx;
}
.img{
  display: block;
  border: 1rpx solid #eee;
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.info{
  flex: 1;
  padding-left: 10rpx;
}
.name{
  width: 300rpx;
  font-size: 27rpx;
  margin-bottom: 8rpx;
}
.num{
  font-size: 30rpx;
  display: flex;
}
.main{
  flex: 1;
}
.box{
  display: inline-block;
  border: 1rpx solid #f2f2f2;
}
.number{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.btn{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  background-color: #f2f2f2;
}
.del{
  width: 100rpx;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 50rpx;
}
.price{
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}
.footer .left,
.footer .center,
.footer .right{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer .left{
  flex: 1;
  flex-direction: column;
  background-color: #fff;
  font-size: 26rpx;
}
.footer .left .num{
  color: #ff5722;
  font-size: 34rpx;
  font-weight: 700;
  margin-right: 10rpx;
}
.footer .center{
  flex: 1;
  background-color: #eee;
  font-size: 30rpx;
}
.footer .right{
  flex: 1;
  background-color: #ff6700;
  color: #fff;
  font-size: 30rpx;
}