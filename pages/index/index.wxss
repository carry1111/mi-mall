/* pages/game/index.wxss */
.top{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 170rpx;
  box-shadow: 0 4rpx 10rpx 1rpx rgba(0,0,0,.2);
  background-color: #f2f2f2;
}
.header{
  display: flex;
  height: 90rpx;
}
.icon{
  width: 100rpx;
  height: 86rpx;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 58rpx;
}
.search{
  flex: 1;
  height: 66rpx;
  line-height: 66rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
  border: 2rpx solid #e5e5e5;
  background-color: #fff;
  text-align: left;
  color: rgba(0,0,0,.3);
  font-size: 30rpx;
}
.search-icon{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 36upx;
}
.user{
  width: 100rpx;
  height: 86rpx;
  background: url('data:image/png;base64,') no-repeat center;
  background-size: 58rpx;
}
.scroll-view{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
}
.scroll-view-item{
  height: 80rpx;
  flex-basis: 130rpx;
  flex-shrink: 0;
  text-align: center;
}
.name{
  box-sizing: border-box;
  display: inline-block;
  height: 80rpx;
}
.selected{
  color: rgb(237, 91, 0);
  border-bottom: 4rpx solid rgb(237, 91, 0);
  border-color: rgb(237, 91, 0);
}
.interval{
  height: 170rpx;
}